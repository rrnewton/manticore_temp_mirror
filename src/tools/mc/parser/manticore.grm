%name Manticore;

%tokens
      : KW__prim	("_prim")
      | KW__primcode	("_primcode")
      ;

%import "sml.grm";
%import "bom.grm";

%start Program;

Decl
        : "_primcode" "(" BOMDecls ")"
		=> (PT.PrimCodeDecl BOMDecls)
	;

TyDeclRHS
	: "_prim" "(" BOMType ")"
		=> (fn (params, name) => PT.PrimTyDecl(params, name, BOMType))
	;

ValueDeclRHS
	: "_prim" "(" "fun" BOMLambda ")"
		=> (fn pat => PT.PrimVDecl(pat, PT.LambdaPrimVal BOMLambda))
	| "_prim" "(" ID ")"
		=> (fn pat => PT.PrimVDecl(pat, PT.VarPrimVal ID))
	| "_prim" "(" HLOP ")"
		=> (fn pat => PT.PrimVDecl(pat, PT.HLOpPrimVal HLOP))
	;
