structure LoadPaths =
  struct

  (* Manticore basis library *)
    val basisDir = "@MANTICORE_BASISDIR@"

  (* Manticore basis CPP definition directory *)
    val basisCPPDefDir = OS.Path.joinDirFile {dir=basisDir, file="include"}

  (* Manticore parallel directory *)
    val basisParallelDir = OS.Path.joinDirFile {dir=basisDir, file="parallel"}

  (* Manticore runtime directory *)
    val basisRuntimeDir = OS.Path.joinDirFile {dir=basisDir, file="runtime"}

  (* Manticore sequential directory *)
    val basisSequentialDir = OS.Path.joinDirFile {dir=basisDir, file="sequential"}

  (* top-level schedulers *)
    val topLevelSchedsDir = OS.Path.joinDirFile{file="top-level-scheds", dir=basisRuntimeDir}

  (* sequential basis library *)
    val sequentialLib = OS.Path.joinDirFile{file="sequential.mlb", dir=basisSequentialDir}

  (* parallel basis library *)
    val parallelLib = OS.Path.joinDirFile{file="parallel.mlb", dir=basisParallelDir}	

  (* top-level scheduler library *)
    fun topLevelSchedLib topLevelSched = OS.Path.joinDirFile{file=topLevelSched^".mlb", dir=topLevelSchedsDir}

  end
