(* float2.bom *)

module Float2
  fun init (arg : any; exh : cont(any)) : unit =

    fun iterate (ar : (int, float); exh : cont(any)) : float =
	let i : int = #0(ar)
	let f : float = #1(ar)
	case i
         of 0  => return (f) 
	  | _  =>   
             let f1 : float = 2.3
	     let f' : float = F32Add (f, f1)
             let i1 : int = 1
             let i': int = I32Sub (i, i1)
             let ar' : (int, float) = alloc (i', f')
             apply iterate (ar'; exh)
	 end

    return (enum(0))
