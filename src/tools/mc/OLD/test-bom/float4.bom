(* float4.bom *)

module Float4

  extern void M_PrintFloat (float);

  fun init (u : unit/ exh : cont(any)) : int =

    fun iter (i : int, f : float / exh : cont(any)) : float =
	if I32Eq (i, 0) 
	   then return (f)
	   else let x : float = 2.0
                let f' : float = F32Mul (f, x)
                let i' : int = I32Sub (i, 1)
                apply iter (i', f' / exh)        
  
    let x : float = apply iter (5, 1.0 / exh)
    do ccall M_PrintFloat (x)
    return (0)
