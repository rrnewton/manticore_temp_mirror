 *)

#include "ltc.def"
#include "types.def"
#include "fgs.def"
#include "runtime-offsets.def"
#include "debugging.def"

define inline @ltc-push(f : fiber_fun / exh : exh) : unit =

  let k : fiber = @fiber(f / exh)
  @ltc-push-fiber(k / exh)
;
