#include "logging.def"
#include "debugging.def"

extern void M_LogEventPtr (void*, int, void*);

define inline @log-event-ptr (evt : log_event, ptr : any) : () =
  do ccall M_LogEventPtr (host_vproc, evt, ptr)
  return ()
;
