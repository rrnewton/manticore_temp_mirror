#include "types.def"
#include "tags.def"
#include "debugging.def"
#include "fiber-cancellation.def"

define inline @cancel-cell (/ exh : exh) : cancel_cell =
  let cancelCell : cancel_cell = alloc(FALSE)
  let cancelCell : cancel_cell = promote(cancelCell)
  return(cancelCell)
;
