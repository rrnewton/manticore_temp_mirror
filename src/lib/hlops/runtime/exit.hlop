#include "types.def"
#include "assert.def"

define inline @forward (vp : vproc, sig : signal / exh : exh) noreturn;

define inline @exit (_ : unit / exh : exh) : any = 
  do @forward (host_vproc, STOP / exh)
  return(enum(0):any)
;
