#include "types.def"

extern void *M_StringConcat2 (void *, void *) __attribute__((pure,alloc));

define @fail (arg : ml_string / exh : exh) : any;

define inline @todo (thing : ml_string / exh : exh) : any =
  let prefix : ml_string = @"TODO: "
  let msg : ml_string = ccall M_StringConcat2 (prefix, thing)
  @fail (msg / exh)
;
