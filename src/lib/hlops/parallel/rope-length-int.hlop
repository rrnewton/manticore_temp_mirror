#include "types.def"
#include "ropes.def"

define @rope-length-int (r : rope / exh : exh) : int =
  case r
   of LEAF(n : int, _ : list) => return (n)
    | CAT (n : int, d : int, _ : rope, _ : rope) => return (n)
  end
;

