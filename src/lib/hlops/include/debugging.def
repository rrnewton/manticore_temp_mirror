#ifndef _DEBUGGING_DEF_
#define _DEBUGGING_DEF_

extern void M_Print (void*);
extern void M_PrintInt (int);
extern void M_PrintPtr (void *, void *);
extern void M_PrintDebug (void*);
extern void M_PrintLong (long);
extern void M_PrintDebugMsg (void*, void*, void*, int);

#  define print_debug(msg)                                               \
             do ccall M_PrintDebugMsg (FALSE, msg, __FILE__, __LINE__)   \

#  define print_msg(msg)                                                 \
             do ccall M_PrintDebugMsg (TRUE, msg, __FILE__, __LINE__)    \

#endif /*! _DEBUGGING_DEF_ */
