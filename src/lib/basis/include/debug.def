#ifndef _DEBUG_DEF_
#define _DEBUG_DEF_

#define _QUOTE(x) #x
#define QUOTE(x) _QUOTE(x)

(* prints when the compiler debugging flag is set and the runtime flag is set *)
#  define print_debug(msg)                                               \
             ccall M_PrintDebugMsg (PrimTypes.FALSE, msg, QUOTE(PML_FILE), __LINE__)   \

(* prints when the compiler debugging flag is set *)
#  define print_msg(msg)                                                 \
             ccall M_PrintDebugMsg (PrimTypes.TRUE, msg, QUOTE(PML_FILE), __LINE__)    \

#  define print_ppt() \
             ccall M_PrintDebugMsg (PrimTypes.TRUE, "", QUOTE(PML_FILE), __LINE__) \
             
#endif /*! _DEBUG_DEF_ */
