# Makefile for primes benchmarks
#
# @configure_input@
#

SHELL =		/bin/sh

SMLNJ =		@SMLNJ_CMD@
MLTON =		@MLTON@
PMLC =		@PMLC@

TARGET =	primes

all:		$(TARGET)-smlnj $(TARGET)-mc1 $(TARGET)-mc2

$(TARGET)-smlnj:	sources.cm primes.sml
	echo "SMLofNJ.exportFn(\"primes-smlnj\", fn _ => (Main.timeit 10000000; OS.Process.success));" | $(SMLNJ) sources.cm

$(TARGET)-mc1:	primes1.pml
	$(PMLC) -o $(TARGET)-mc1 primes1.pml

$(TARGET)-mc2:	primes2.pml
	$(PMLC) -o $(TARGET)-mc2 primes2.pml

